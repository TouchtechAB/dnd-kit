{
  "extends": "./tsconfig.build.json",
  "include": [
    "packages",
    "types",
    "scripts",
    "playground",
    "stories"
  ],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@touchtech/dnd-kit-core": [
        "packages/core/src"
      ],
      "@touchtech/dnd-kit-accessibility": [
        "packages/accessibility/src"
      ],
      "@touchtech/dnd-kit-modifiers": [
        "packages/modifiers/src"
      ],
      "@touchtech/dnd-kit-sortable": [
        "packages/sortable/src"
      ],
      "@touchtech/dnd-kit-utilities": [
        "packages/utilities/src"
      ],
      "$test/*": [
        "test/*"
      ]
    }
  }
}